{ lib, config, ... }: {
  options = {
    hyprland-animations.enable = lib.mkEnableOption {
      default = true;
      description = "Enable animations on Hyprland";
    };
  };

  config = lib.mkIf config.hyprland-animations.enable {
    wayland.windowManager.hyprland = {
      settings = {
        animations = {
          enabled = true;
          bezier = "myBezier, 0.05, 0.9, 0.1, 1.00";

          animation = [ 
            "windows, 1, 3, myBezier"
            "windowsOut, 1, 3, default, popin 80%"
            "fade, 1, 3, default"
            "workspaces, 0"
          ];
        };
      };
    };
  };
}
