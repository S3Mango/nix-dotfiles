{ lib, config, ... }: {
  options = {
    hyprland-layerrules.enable = lib.mkEnableOption {
      default = true;
      description = "Enables Layer rules on Hyprland";
    };
  };

  config = lib.mkIf config.hyprland-layerrules.enable {
    wayland.windowManager.hyprland = {
      settings = {
        layerrule = [
          "blur, rofi"
          "ignorezero, rofi"
          "blur, notifications"
          "ignorezero, notifications"
          "blur, logout_dialog"
          "blur, waybar"
        ];
      };
    };
  };
}
