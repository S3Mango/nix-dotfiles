{ lib, config, ... }: {
  options = {
    hyprland-workspaces.enable = lib.mkEnableOption {
      default = true;
      description = "Enables workspaces on Hyprland";
    };
  };

  config = lib.mkIf config.hyprland-workspaces.enable {
    wayland.windowManager.hyprland = {
      settings = {
        workspace = [
          "10, border:false, rounding:false"
        ];
      };
    };
  };
}
